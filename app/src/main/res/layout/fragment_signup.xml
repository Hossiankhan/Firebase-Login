<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.signup">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/singup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:text="Sing Up"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/backbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/backbutton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:layout_marginTop="25dp"
                android:text="When Community come unity"
                android:textColor="#484B5A"
                android:textSize="40dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/backbutton"
                app:layout_constraintTop_toBottomOf="@+id/backbutton" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="295dp"
                android:layout_height="41dp"
                android:layout_marginTop="5dp"
                android:text="Our community is always there 24 hours if you need it, don't hesutate to join"
                android:textColor="#8A8A8D"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/happy"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <EditText
                android:id="@+id/firstname"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/coustom_editbox"
                android:hint="First name"
                android:inputType="text"
                android:padding="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

            <EditText
                android:id="@+id/lastname"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/coustom_editbox"
                android:hint="Last name"
                android:inputType="text"
                android:padding="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/firstname"
                app:layout_constraintStart_toStartOf="@+id/firstname"
                app:layout_constraintTop_toBottomOf="@+id/firstname" />

            <EditText
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/coustom_editbox"
                android:hint="E-mail"
                android:inputType="text"
                android:padding="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/lastname"
                app:layout_constraintStart_toStartOf="@+id/lastname"
                app:layout_constraintTop_toBottomOf="@+id/lastname" />
            <EditText
                android:id="@+id/passwo"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/coustom_editbox"
                android:inputType="textPassword"
                android:padding="20dp"
                android:hint="Password"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/Email"
                app:layout_constraintStart_toStartOf="@+id/Email"
                app:layout_constraintTop_toBottomOf="@+id/Email" />

            <Button
                android:id="@+id/singupbtn"
                style="@style/ThemeOverlay.CoustomButton"
                android:layout_width="330dp"
                android:layout_height="65dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="#20B8FB"
                android:text="Sing Up"
                app:layout_constraintEnd_toEndOf="@+id/passwo"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintStart_toStartOf="@+id/passwo"
                app:layout_constraintTop_toBottomOf="@+id/passwo" />

            <TextView
                android:id="@+id/alreadylogin"
                android:layout_width="189dp"
                android:layout_height="24dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:text="Already have an account ?"
                android:textColor="#8A8A8D"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/singupbtn"
                app:layout_constraintTop_toBottomOf="@+id/singupbtn" />

            <TextView
                android:id="@+id/allogin"
                android:layout_width="58dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:text="Login"
                android:textColor="#FF4B12"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/alreadylogin"
                app:layout_constraintEnd_toEndOf="@+id/singupbtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/alreadylogin"
                app:layout_constraintTop_toTopOf="@+id/alreadylogin"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</LinearLayout>