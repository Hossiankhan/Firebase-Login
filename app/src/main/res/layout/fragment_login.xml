<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.login">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toEndOf="parent">


            <ImageView
                android:id="@+id/backbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/baseline_arrow_back_ios_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sing_up1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="50dp"
                android:text="Login"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/backbutton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/backbutton"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="236dp"
                android:layout_height="206dp"
                android:layout_marginTop="25dp"
                android:text="This is your community, help them to grow more"
                android:textColor="#484B5A"
                android:textSize="40dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/backbutton"
                app:layout_constraintTop_toBottomOf="@+id/backbutton" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/smile_face"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="338dp"
                android:layout_height="57dp"
                android:layout_marginTop="5dp"
                android:text="Our community is your community too so let's strengthen our community together"
                android:textColor="#8A8A8D"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/textView"
                app:layout_constraintTop_toBottomOf="@+id/textView" />

            <EditText
                android:id="@+id/editMail"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/coustom_editbox"
                android:hint="Email"
                android:inputType="text"
                android:padding="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView2" />

            <EditText
                android:id="@+id/editepass"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/coustom_editbox"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/editMail"
                app:layout_constraintStart_toStartOf="@+id/editMail"
                app:layout_constraintTop_toBottomOf="@+id/editMail" />

            <TextView
                android:id="@+id/forgetpass"
                android:layout_width="142dp"
                android:layout_height="21dp"
                android:layout_marginTop="15dp"
                android:text="Forgot Password?"
                android:textColor="#FF4B12"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/editepass"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/editepass"
                app:layout_constraintTop_toBottomOf="@+id/editepass" />


            <Button
                android:id="@+id/loginbtn"
                style="@style/ThemeOverlay.CoustomButton"
                android:layout_width="330dp"
                android:layout_height="65dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#20B8FB"
                android:text="Login"
                app:layout_constraintEnd_toEndOf="@+id/editepass"
                app:layout_constraintHorizontal_bias="0.487"
                app:layout_constraintStart_toStartOf="@+id/editepass"
                app:layout_constraintTop_toBottomOf="@+id/forgetpass" />

            <TextView
                android:id="@+id/alreadylogin"
                android:layout_width="171dp"
                android:layout_height="24dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="5dp"
                android:text="Don't have an account?"
                android:textColor="#8A8A8D"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/loginbtn"
                app:layout_constraintTop_toBottomOf="@+id/loginbtn" />

            <TextView
                android:id="@+id/singup"
                android:layout_width="58dp"
                android:layout_height="28dp"
                android:layout_marginStart="10dp"
                android:text="SingUp"
                android:textColor="#FF4B12"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/alreadylogin"
                app:layout_constraintEnd_toEndOf="@+id/loginbtn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/alreadylogin"
                app:layout_constraintTop_toTopOf="@+id/alreadylogin"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>



</LinearLayout>